{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:api": "node ./dist/apps/api/main.js",
    "start:cron": "node --max-old-space-size=8192 ./dist/apps/cron/main.js",
    "start:bot": "node ./dist/apps/bot/main.js",
    "start:bot:dev": "nest start --watch --sourceRoot ./src/apps/bot --entryFile ./apps/bot/main",
    "start:consumers": "node ./dist/apps/consumers/main.js",
    "start:api:dev": "nest start --watch --sourceRoot ./src/apps/api --entryFile ./apps/api/main",
    "start:cron:dev": "nest start --watch --sourceRoot ./src/apps/cron --entryFile ./apps/cron/main",
    "start:consumers:dev": "nest start --watch --sourceRoot ./src/apps/consumers --entryFile ./apps/consumers/main",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:api:repl": "nest start --watch --sourceRoot ./src/apps/api --entryFile ./apps/api/repl",
    "start:cron:repl": "nest start --watch --sourceRoot ./src/apps/cron --entryFile ./apps/cron/repl",
    "start:consumers:repl": "nest start --watch --sourceRoot ./src/apps/consumers --entryFile ./apps/consumers/repl",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "yarn run build && npx typeorm -d dist/common/modules/pg-database/migrations/database.migrations.js",
    "migration:generate": "yarn run typeorm -- migration:generate",
    "migration:create": "npx typeorm migration:create",
    "migration:revert": "yarn run typeorm -- migration:revert",
    "migration:run": "yarn run typeorm -- migration:run",
    "typeorm:prod": "npx typeorm -d dist/common/modules/pg-database/migrations/database.migrations.js",
    "migration:run:prod": "npm run typeorm:prod -- migration:run"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/bull": "^10.1.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/platform-socket.io": "^10.3.8",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^5.1.2",
    "@nestjs/typeorm": "^10.0.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.53.0",
    "@opentelemetry/instrumentation-nestjs-core": "^0.40.0",
    "@opentelemetry/resources": "^1.26.0",
    "@opentelemetry/sdk-metrics": "^1.29.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "@opentelemetry/semantic-conventions": "^1.27.0",
    "async-mutex": "^0.5.0",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.2",
    "cache-manager": "^5.5.2",
    "cache-manager-redis-yet": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "commander": "^12.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "ethers": "^6.13.5",
    "ioredis": "^5.4.1",
    "js-yaml": "^4.1.0",
    "mime-types": "^2.1.35",
    "nestjs-paginate": "8.6.1",
    "opentelemetry-instrumentation-typeorm": "^0.41.0",
    "pg": "^8.11.3",
    "redis": "4.6.14",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.13",
    "@types/geoip-lite": "^1.4.4",
    "@types/jest": "29.2.4",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.10",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.11",
    "@types/node": "18.11.18",
    "@types/pg": "^8.11.6",
    "@types/request-ip": "^0.0.40",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
